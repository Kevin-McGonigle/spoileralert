{
  "name": "SpoilerAlert",
  "version": "1.0",
  "description": "Blocks spoilers for the Marvel Cinematic Universe and Game of Thrones",
  "manifest_version": 2,

  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },


  "browser_action": {
    "default_popup": "./popup.html",
    "default_icon": {
      "16": "./images/stop.png"
    }
  },

  "icons": {
    "16": "./images/stop.png"
  },


  "content_scripts": [
    {
      "matches": ["*://*.joe.ie/*", "*://localhost/*"],
      "js": ["jquery-3.3.1.js", "content.js"]
    }
  ],

  "web_accessible_resources":[
    "sa_styles.css",
    "images/*"
  ]
}